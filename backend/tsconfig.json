{
  "compilerOptions": {
    "target": "es2021",
    "outDir": "./dist",
    "module": "commonjs",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["es2021"],
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
}
